@model IEnumerable<PublicHoliday>

@{
    ViewData["Title"] = "Manage Public Holidays";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <!-- Button to Add New Holiday -->
    <a href="@Url.Action("AddHoliday", "PublicHolidays")" class="btn btn-success mb-3">Add New Holiday</a>

    <!-- Table for Displaying Holidays -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Date</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var holiday in Model)
            {
                    <tr>
                        <td>@holiday.Id</td>
                        <td>@holiday.Date?.ToString("yyyy-MM-dd")</td>
                        <td>@holiday.Description</td>
                        <td>
                            <a href="@Url.Action("Delete", "PublicHolidays", new { id = holiday.Id })" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>
