@model Employee

@{
    ViewData["Title"] = "Edit Employee";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <form asp-action="Edit" method="post">
        <div class="mb-3">
            <label for="Name" class="form-label">Name</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
        </div>
        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
        </div>
        <div class="mb-3">
            <label for="JobPosition" class="form-label">Job Position</label>
            <input type="text" class="form-control" id="JobPosition" name="JobPosition" value="@Model.JobPosition"
                required />
        </div>
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="@Url.Action("All", "Employees")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
