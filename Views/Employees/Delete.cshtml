@model Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <p>Are you sure you want to delete the following employee?</p>

    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Job Position</dt>
        <dd class="col-sm-9">@Model.JobPosition</dd>
    </dl>

    <form id="deleteForm" asp-action="Delete" method="post">

        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>

        <a href="@Url.Action("All", "Employees")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
